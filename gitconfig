	trustExitCode = true
[mergetool "bc3"]
	trustExitCode = true

[core]
	editor = vim
	pager = cat
	# TODO autocrlf
	safecrlf = true

[status]
	showStash = true
	submoduleSummary = true

[rebase]
	stat = true

[advice]
	ignoredHook = true
	detachedHead = false

[color]
	branch = false

[rerere]
	enabled = true

