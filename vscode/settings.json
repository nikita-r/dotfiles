{
	"window.titleSeparator": " · ",
	"window.title": "Code${separator}${dirty}${activeEditorShort}${separator}${rootName}",

	"security.workspace.trust.enabled": false,

	"update.mode": "none", // or "manual"
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"redhat.telemetry.enabled": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"telemetry.telemetryLevel": "off",
	"workbench.enableExperiments": false,

	"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~

	"explorer.autoReveal": false,
	"explorer.incrementalNaming": "smart",
	//"explorer.sortOrder": "modified",

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": "never",
	"editor.occurrencesHighlight": false,
	"search.showLineNumbers": true,

	"workbench.settings.enableNaturalLanguageSearch": false,

	/* suggestions-adjacent settings */

	"editor.hover.enabled": false,
	"editor.hover.above": false,
	"editor.quickSuggestions": false,
	"editor.quickSuggestionsDelay": 333,

	"editor.suggest.filterGraceful": false,
	"editor.suggest.localityBonus": true,
	//"editor.suggest.preview": true,
	"editor.suggest.showDeprecated": false,
	"editor.suggest.showStatusBar": true,

	"editor.suggestSelection": "first",
	"editor.snippetSuggestions": "top",
	"editor.tabCompletion": "onlySnippets", // or "on"

	"emmet.showSuggestionsAsSnippets": true,
	"emmet.triggerExpansionOnTab": true,

	"editor.suggestOnTriggerCharacters": false,
	//"editor.parameterHints.enabled": false,
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",

	/* . . . */

	//"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	//"editor.fontSize": 14,
	//"editor.fontLigatures": true,

	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorWidth": 3,

	//"editor.bracketPairColorization.enabled": true,
	//"editor.guides.bracketPairs": true,
	//"editor.guides.highlightActiveIndentation": false,
	"editor.guides.indentation": false,
	"editor.renderIndentGuides": false, // pre-v1.61
	//"editor.rulers": [ 80, 120 ],
	"workbench.tree.indent": 12,
	"workbench.tree.renderIndentGuides": "always",

	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.wrapTabs": true,

	//"workbench.editor.enablePreview": false,
	"workbench.editor.restoreViewState": true,
	"workbench.editor.sharedViewState": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	//"editor.renderControlCharacters": true,

	"breadcrumbs.symbolSortOrder": "name",
	"diffEditor.renderIndicators": false,
	"editor.comments.insertSpace": false,
	"editor.copyWithSyntaxHighlighting": false,
	//"editor.foldingHighlight": false,
	"editor.roundedSelection": false,

	"editor.showFoldingControls": "always",
	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": true,
	"workbench.editor.decorations.badges": false,
	"workbench.editor.languageDetection": false,
	"workbench.editor.untitled.hint": "hidden",

	"editor.codeLensFontFamily": "serif",
	"editor.codeLensFontSize": 12,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"scm.autoReveal": false,
	"scm.repositories.visible": 0,

	"git.enableStatusBarSync": false,
	//"git.followTagsWhenSync": true,
	"git.rebaseWhenSync": true,
	"git.showPushSuccessNotification": true,

	"scm.inputFontFamily": "sans",
	"scm.inputFontSize": 12,
	"git.showCommitInput": false,

	/* Remote › Containers */
	"dotfiles.repository": "nikita-r/dotfiles",
	"remote.containers.copyGitConfig": false,

	/* Extensions */

	"gitlens.blame.avatars": false,
	"gitlens.blame.ignoreWhitespace": true,

	"omnisharp.autoStart": false, // #> OmniSharp: Restart
	"omnisharp.enableRoslynAnalyzers": true,

	"powershell.startAutomatically": false, // #> PowerShell: Restart
	"powershell.debugging.createTemporaryIntegratedConsole": true,
	//"powershell.integratedConsole.focusConsoleOnExecute": false,
	//"powershell.integratedConsole.showOnStartup": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.scriptAnalysis.enable": false,

	"jupyter.disableJupyterAutoStart": true,
	"jupyter.experiments.enabled": false,
	"python.autoUpdateLanguageServer": false,
	"python.experiments.enabled": false,
	"python.linting.enabled": false,

	/* ~codeFormatting */
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapAttributesIndentSize": 1,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"python.formatting.provider": "none",
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.quoteStyle": "single",

	/* !autoClosing */
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"html.autoClosingTags": false,
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,
	"xml.completion.autoCloseTags": false,

	/* Exit / Init */
	"files.hotExit": "off",
	"window.newWindowDimensions": "offset",
	"workbench.startupEditor": "none",
	"zenMode.restore": false,

	"debug.confirmOnExit": "always",
	"terminal.integrated.confirmOnExit": "hasChildProcesses", // not "always"
	"terminal.integrated.confirmOnKill": "always",

	/* Terminal */

	"terminal.integrated.scrollback": 32767,
	"terminal.integrated.persistentSessionScrollback": 4095,

	//"terminal.integrated.allowMnemonics": true, // makes Alt+B unavailable

	"terminal.integrated.commandsToSkipShell": [
		"workbench.action.showAllSymbols",
		"workbench.action.toggleSidebarVisibility",
	],

	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"args": ["-NoLogo"]
		},
	},

	//"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.tabs.enableAnimation": false,
	"terminal.integrated.tabs.hideCondition": "never",
	"terminal.integrated.tabs.showActiveTerminal": "never",
	"terminal.integrated.tabs.showActions": "never",

	/* customize GUI */

	"window.dialogStyle": "custom",
	//"window.menuBarVisibility": "hidden",
	"window.customMenuBarAltFocus": false,

	"workbench.colorCustomizations": {

		/* Hue: 300/360 */
		"editor.foldBackground": "#301830",
		"editorGutter.background": "#201020",
		"activityBar.background": "#402040",
		"activityBarBadge.background": "#806080",
		"activityBarBadge.foreground": "#402040",
		"breadcrumb.background": "#402040",
		"statusBar.background": "#402040",
		"statusBar.noFolderBackground": "#402040",
		"titleBar.activeBackground": "#402040",
		"titleBar.inactiveBackground": "#402040",

		/* Hue:  20/360 */
		"focusBorder": "#F08048",
		"progressBar.background": "#F08048",
		"tab.activeModifiedBorder": "#F08048",

		"editor.selectionBackground": "#135",
		"editor.inactiveSelectionBackground": "#135",
		"editor.selectionHighlightBackground": "#aaa3",
		"editor.findMatchHighlightBackground": "#511",
		"editor.findRangeHighlightBackground": "#66e3",
		"terminal.selectionBackground": "#fff2",
		"minimap.findMatchHighlight": "#c84",
		"minimap.warningHighlight": "#ff0",
		"minimap.errorHighlight": "#f00",
		"editor.findMatchBackground": "#733",
		"minimap.selectionHighlight": "#357",
	},

	"workbench.iconTheme": "vs-minimal", // File Icon Theme
	"outline.icons": false, // these icons are also used in breadcrumbs ("breadcrumbs.icons" is no-op)
	"notebook.outline.showCodeCells": true,

	/* . . . */

	"window.zoomLevel": 0.0,

	"emmet.includeLanguages": {
	},

	"diffEditor.ignoreTrimWhitespace": false,
	//"diffEditor.renderSideBySide": false,
	"files.associations": {
		"*.qss": "css",
	},
	"files.eol": "\n",
	"files.exclude": {
		"**/.ipynb_checkpoints": true,
		"**/__pycache__": true,
		"**/CVS": false
	},
	"search.exclude": {
		"**/package-lock.json": true,
	},
}