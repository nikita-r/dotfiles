	"workbench.iconTheme": "vs-minimal", // File Icon Theme
	"outline.icons": false, // affects breadcrumbs as well ("breadcrumbs.icons" is no-op)

	"window.dialogStyle": "custom",
	//"window.openFilesInNewWindow": "default",
	"window.newWindowDimensions": "offset",
	"window.zoomLevel": 0.0,

	//"window.menuBarVisibility": "hidden",
	"window.customMenuBarAltFocus": false,
	"window.enableMenuBarMnemonics": true,

	//"window.titleBarStyle": "custom",
	"workbench.layoutControl.enabled": true,
	"workbench.layoutControl.type": "toggles",

	//"files.trimTrailingWhitespace": true,
	//"files.trimFinalNewlines": true,
	//"files.insertFinalNewline": true,
	"files.eol": "\n",

	/* discriminate amongst file types */

	"files.associations": {
		"*.qss": "css",
	},
	"files.exclude": {
		"**/.ipynb_checkpoints": true,
		"**/__pycache__": true,
		"**/CVS": false
	},
	"search.exclude": {
		"**/package-lock.json": true,
	},
	"workbench.editorAssociations": {
		"*.hex": "hexEditor.hexedit",
		//"*.md": "vscode.markdown.preview.editor",
	},

	/* ad-hoc preferences per extension */

	"emmet.includeLanguages": {
	},
	"emmet.preferences": { "output.inlineBreak": 3 },
	"emmet.syntaxProfiles": { "html": { "self_closing_tag": "xhtml" } },

	"cSpell.language": "en,en-GB",
	"cSpell.userWords": [
	],

	/* ryu1kn.text-marker */
	"textmarker.hideStatusBarItems": true,
	"textmarker.autoSelectDistinctiveTextColor": true,
	//"textmarker.defaultHighlightOpacity": 0.5,
	"textmarker.highlightColors": [
		"SteelBlue",
		"Sienna",
		"OliveDrab",
		"IndianRed",
	],
	"textmarker.defaultHighlightColor": "DarkSlateGray",

	/* ctf0.macros */
	"macros.list": {
		"resetExplorerView": [
			"workbench.files.action.focusFilesExplorer",
			"list.clear",
			"workbench.files.action.collapseExplorerFolders",
		],
	},

	/*~*~*~*~*~*~*~*~*~*~*~*/
	"zenMode.restore": false,
	"zenMode.hideLineNumbers": false,
