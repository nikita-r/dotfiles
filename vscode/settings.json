	"editor.autoClosingQuotes": "never",
	"html.autoClosingTags": false,
	"html.autoCreateQuotes": false,
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,

	/* . . . */

	"files.hotExit": "off", // or "onExitAndWindowClose"
	"terminal.integrated.persistentSessionReviveProcess": "never", // or "onExitAndWindowClose"
	"terminal.integrated.persistentSessionScrollback": 4095,
	"terminal.integrated.scrollback": 32767,

	/* debug */
	"debug.confirmOnExit": "always",
	"debug.allowBreakpointsEverywhere": true,
	//"debug.console.historySuggestions": false,
	"debug.focusEditorOnBreak": false,
	"debug.inlineValues": "on",
	"debug.javascript.breakOnConditionalError": true,
	"debug.showBreakpointsInOverviewRuler": true,
