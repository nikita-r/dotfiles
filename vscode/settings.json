{
	"window.titleSeparator": " · ",
	"window.title": "Code${separator}${rootName}${separator}${dirty}${activeEditorShort}",

	"security.workspace.trust.enabled": false,

	"update.mode": "none", // or "manual"
	"update.showReleaseNotes": false,
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"redhat.telemetry.enabled": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"telemetry.telemetryLevel": "off",
	"typescript.surveys.enabled": false,
	"workbench.enableExperiments": false,

	"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	"editor.wrappingIndent": "none",

	"explorer.autoReveal": false,
	"explorer.confirmUndo": "verbose",
	"explorer.enableUndo": false,
	"explorer.incrementalNaming": "smart",
	//"explorer.sortOrder": "modified",
	//"explorer.sortOrderLexicographicOptions": "unicode",
	"explorer.openEditors.visible": 16,

	"workbench.localHistory.enabled": false,
	"workbench.localHistory.mergeWindow": 96,
	"workbench.localHistory.maxFileEntries": 16,

	/* search / peek / preview */

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": "never",
	"editor.occurrencesHighlight": false,
	"search.searchEditor.defaultNumberOfContextLines": null,
	"search.searchOnTypeDebouncePeriod": 666,
	"search.showLineNumbers": true,

	//"editor.stablePeek": true,
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"search.searchEditor.doubleClickBehaviour": "selectWord",

	//"workbench.editor.enablePreview": false,
	"workbench.settings.enableNaturalLanguageSearch": false,

	/* suggestions-adjacent settings */

	"editor.hover.enabled": false,
	"editor.hover.above": false,
	"editor.inlayHints.enabled": "offUnlessPressed", // press Ctrl+Alt
	"editor.lightbulb.enabled": false,

	"editor.quickSuggestions": {
		"comments": "off",
		"strings": "off",
		"other": "off"
	},
	"editor.quickSuggestionsDelay": 333,
	"editor.parameterHints.enabled": false,
	"editor.parameterHints.cycle": true,
	"editor.suggestOnTriggerCharacters": false,

	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.tabCompletion": "onlySnippets", // or "on"
	"emmet.triggerExpansionOnTab": true,

	"emmet.showSuggestionsAsSnippets": false,
	"editor.snippetSuggestions": "none", // or "top"

	"editor.suggestSelection": "first",
	"editor.suggest.filterGraceful": false,
	"editor.suggest.localityBonus": true,
	//"editor.suggest.preview": true,
	"editor.suggest.showDeprecated": false,
	"editor.suggest.showStatusBar": true,

	/* . . . */

	"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	"editor.fontLigatures": "'cv13', 'cv14'",
	//"editor.fontFamily": "Cascadia Code",
	//"editor.fontLigatures": "'ss01', 'zero'",

	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorWidth": 3,
	//"editor.hideCursorInOverviewRuler": true,
	"editor.roundedSelection": false,

	/* pairs, rulers & guides */
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": "active",
	"editor.guides.highlightActiveBracketPair": false,
	"editor.guides.highlightActiveIndentation": false,
	"editor.guides.indentation": false,
	"editor.renderLineHighlight": "none",
	//"editor.rulers": [ 80, 120 ],
	"workbench.list.horizontalScrolling": true,
	"workbench.list.smoothScrolling": true,
	"workbench.tree.indent": 12,
	"workbench.tree.renderIndentGuides": "always",

	/* editor tabs appearance */
	"workbench.editor.decorations.badges": false,
	"workbench.editor.decorations.colors": false,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.wrapTabs": true,

	"workbench.editor.languageDetection": false,
	"workbench.editor.historyBasedLanguageDetection": false,
	"workbench.editor.untitled.hint": "hidden",
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,

	"workbench.editor.restoreViewState": true,
	"workbench.editor.sharedViewState": true,
	//"workbench.editor.revealIfOpen": true,
	"workbench.editor.navigationScope": "editorGroup",
	//"workbench.editor.closeEmptyGroups": false,

	"extensions.closeExtensionDetailsOnViewChange": true,
	"workbench.quickOpen.closeOnFocusLost": false,

	/* . . . */

	"breadcrumbs.symbolSortOrder": "name",
	"notebook.breadcrumbs.showCodeCells": false,
	"notebook.outline.showCodeCells": true,
	"workbench.view.alwaysShowHeaderActions": true,
	"notebook.showFoldingControls": "always",
	"editor.showFoldingControls": "always",
	"editor.unfoldOnClickAfterEndOfLine": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.renderControlCharacters": false,

	"editor.comments.insertSpace": false,
	//"editor.comments.ignoreEmptyLines": false,
	"editor.copyWithSyntaxHighlighting": false,
	"explorer.copyRelativePathSeparator": "/",

	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": true,

	"editor.codeLensFontFamily": "serif",
	"editor.codeLensFontSize": 12,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"scm.autoReveal": false,
	"scm.repositories.visible": 0,
	"git.untrackedChanges": "separate", // or "hidden" for better performance

	"git.enableStatusBarSync": false,
	//"git.autorefresh": false,
	"git.fetchOnPull": true,
	//"git.autofetch": "all",
	"git.rebaseWhenSync": true,
	//"git.followTagsWhenSync": true,
	"git.showPushSuccessNotification": true,

	"scm.inputFontFamily": "sans",
	"scm.inputFontSize": 12,
	"git.showCommitInput": false,

	/* diff */
	"scm.diffDecorationsIgnoreTrimWhitespace": "inherit",
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderIndicators": false,
	"diffEditor.renderSideBySide": true,

	/* Remote › Containers */
	"dotfiles.repository": "nikita-r/dotfiles",
	"remote.containers.copyGitConfig": false,

	/* Extensions */

	"git-graph.commitDetailsView.location": "Docked to Bottom",
	"git-graph.date.format": "ISO Date Only",
	"git-graph.sourceCodeProviderIntegrationLocation": "More Actions",
	"git-graph.repository.onLoad.showCheckedOutBranch": true,
	"git-graph.repository.includeCommitsMentionedByReflogs": true,

	"gitlens.advanced.messages": {
		"suppressGitMissingWarning": true,
	},
	"gitlens.blame.ignoreWhitespace": true,
	//"gitlens.advanced.blame.delayAfterEdit": 0,
	"gitlens.defaultGravatarsStyle": "identicon",
	"gitlens.views.formats.commits.label": "${❰ tips ❱ ┇ }${message}",
	"gitlens.views.repositories.autoRefresh": false,

	"csv-preview.capitalizeHeaders": false,
	"csv-preview.formatValues": "unquoted",
	"csv-preview.lineNumbers": "source",
	"csv-preview.skipComments": true,

	"editWithShell.shell.windows": "PowerShell.exe",
	"editWithShell.shellArgs.windows": [ "-NoProfile", "-Command" ],

	"highlight-matching-tag.highlightFromContent": true,
	"highlight-matching-tag.highlightSelfClosing": true,
	"highlight-matching-tag.noDefaultEmptyElements": true,
	"highlight-matching-tag.styles": {
		"opening": {
			"left": {
				"custom": {
					"borderWidth": "2px",
					"borderStyle": "dashed",
					"borderColor": "#379",
					"overviewRulerColor": "#356"
				}
			},
			"right": {
				"custom": {
					"borderWidth": "2px",
					"borderStyle": "dashed",
					"borderColor": "#379",
					"overviewRulerColor": "#356"
				}
			}
		}
	},

	"bookmarks.label.suggestion": "suggestWhenSelected",
	"bookmarks.sideBar.expanded": true,
	"cSpell.numSuggestions": 3,
	"cSpell.showStatus": false,
	"filesize.displayInfoOnTheRightSideOfStatusBar": true,
	"filesize.showGzip": false,
	"hexeditor.inspectorType": "hover",
	"hexeditor.maxFileSize": 99,
	//"quick-select.includeBackticks": false,
	"quicktype.inferBooleanStrings": false,

	"todo-tree.tree.scanAtStartup": false,
	"todo-tree.tree.autoRefresh": false,
	"todo-tree.filtering.ignoreGitSubmodules": true,
	"todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
	"todo-tree.filtering.excludeGlobs": [ "**/*.log" ],
	"todo-tree.ripgrep.ripgrepArgs": "--max-columns=999 --no-config --pcre2",
	"todo-tree.regex.regex": "(?<!\")\\b($TAGS)\\b|^\\s*[-*+] +\\[ \\]",
	"todo-tree.regex.subTagRegex": "^\\s*:\\s+",
	//"todo-tree.regex.regexCaseSensitive": false,
	"todo-tree.general.tags": [
		"BUG", "HACK", "FIXME", "ToDo",
		"TODO", "XXX", "MAYBE", "NOTE",
	],
	"todo-tree.tree.labelFormat": "${tag:uppercase} ${after}",
	"todo-tree.tree.tooltipFormat": "Line ${line} ┇ ${after}",
	"todo-tree.general.revealBehaviour": "start of line",
	"todo-tree.highlights.enabled": false,
	"todo-tree.tree.showBadges": false,
	"todo-tree.highlights.defaultHighlight": {
		"icon": "$(symbol-array)", // https://microsoft.github.io/vscode-codicons/dist/codicon.html
		"iconColor": "terminal.ansiMagenta",
	},
	"todo-tree.highlights.customHighlight": {
		"BUG": { "icon": "$(bug)", "iconColor": "terminal.ansiRed" },
		"FIXME": { "icon": "$(tools)" },
		"HACK": { "icon": "$(flame)" },
		"MAYBE": {
			"icon": "question",
			"iconColor": "#4080c0"
		},
		"NOTE": {
			"icon": "note",
			"iconColor": "#4080c0"
		},
		"XXX": {
			"icon": "pulse", // https://primer.style/octicons/
			"iconColor": "FireBrick"
		}
	},

	/* Language Extensions */

	"omnisharp.autoStart": false, // #> OmniSharp: Restart
	"omnisharp.enableRoslynAnalyzers": true,

	"[powershell]": {
		"editor.codeLens": false,
		"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	},
	"powershell.startAutomatically": false, // #> PowerShell: Restart
	"powershell.debugging.createTemporaryIntegratedConsole": true,
	"powershell.integratedConsole.focusConsoleOnExecute": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.scriptAnalysis.enable": false,

	/* Java */
	"java.project.importOnFirstTimeStartup": "interactive",
	"java.project.importHint": false,
	"java.import.generatesMetadataFilesAtProjectRoot": false,
	"java.configuration.checkProjectSettingsExclusions": false,
	"java.autobuild.enabled": false,

	/* Py */
	"jupyter.disableJupyterAutoStart": true,
	"jupyter.experiments.enabled": false,
	"jupyter.sendSelectionToInteractiveWindow": true,
	"python.experiments.enabled": false,
	"python.formatting.provider": "none",
	"python.languageServer": "Pylance",
	"python.linting.enabled": false,

	/* ES */
	"eslint.alwaysShowStatus": true,
	"javascript.suggestionActions.enabled": false,
	"typescript.suggestionActions.enabled": false,
	/* inlay */
	"javascript.inlayHints.enumMemberValues.enabled": true,
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"javascript.inlayHints.parameterNames.enabled": "all",
	"javascript.inlayHints.parameterTypes.enabled": true,
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"typescript.inlayHints.enumMemberValues.enabled": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": true,

	/* ~codeFormatting */
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapAttributesIndentSize": 1,
	"html.format.endWithNewline": true,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.quoteStyle": "single",
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.quoteStyle": "single",

	/* !autoClosing */
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"html.autoClosingTags": false,
	"html.autoCreateQuotes": false,
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,
	//"xml.completion.autoCloseTags": false,

	/* . . . */

	"files.hotExit": "off",

	/* debug */
	"debug.confirmOnExit": "always",
	"debug.console.historySuggestions": false,
	"debug.focusEditorOnBreak": false,
	//"debug.inlineValues": "on",
	"debug.javascript.breakOnConditionalError": true,
	"debug.showBreakpointsInOverviewRuler": true,
	"debug.showSubSessionsInToolBar": true,

	/* Terminal */

	"terminal.integrated.confirmOnExit": "hasChildProcesses", // not "always"
	"terminal.integrated.confirmOnKill": "always", // like "hasChildProcesses"

	"terminal.integrated.scrollback": 32767,
	"terminal.integrated.persistentSessionScrollback": 4095,

	"terminal.integrated.commandsToSkipShell": [
		"notifications.showList",
		"workbench.action.focusQuickOpen",
		"workbench.action.toggleSidebarVisibility",
	],

	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"args": [ "-NoLogo" ],
		},
	},

	"terminal.integrated.rightClickBehavior": "default", // ensure the Linux default
	"terminal.integrated.enableBell": true, // icon in tabs
	"terminal.integrated.bellDuration": 3333,

	"terminal.integrated.tabs.enabled": true,
	"terminal.integrated.tabs.hideCondition": "never",
	//"terminal.integrated.tabs.location": "left",
	"terminal.integrated.tabs.enableAnimation": false,
	"terminal.integrated.tabs.separator": " · ",
	"terminal.integrated.tabs.showActions": "never",
	"terminal.integrated.tabs.showActiveTerminal": "never",

	/* . . . */

	"workbench.colorTheme": "Default Dark+",

	"workbench.colorCustomizations": {

		/* diff+markers */
		"diffEditor.insertedTextBackground": "#0f02",
		"diffEditor.removedTextBackground": "#f002",
		"editorOverviewRuler.addedForeground": "#0f0a",
		"editorOverviewRuler.deletedForeground": "#f00a",
		"editorOverviewRuler.modifiedForeground": "#0afa",
		"[* Dark*]": {
			"bookmarks.overviewRuler": "#39f6",
			"editorError.foreground": "#fff",
			"editorGutter.addedBackground": "#408020", // 100°
			"editorGutter.deletedBackground": "#fff", //"#802020",
			"editorGutter.modifiedBackground": "#206080", // 200°
			"editorInfo.foreground": "#39f", // 210°
			"editorOverviewRuler.infoForeground": "#39f9",
