{
	"window.titleSeparator": " · ",
	"window.title": "Code${separator}${rootName}${separator}${dirty}${activeEditorShort}",

	"update.mode": "none", // or "manual"
	"update.showReleaseNotes": false,
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,

	/* surveys & telemetry */
	"extensions.ignoreRecommendations": true,
	"redhat.telemetry.enabled": false,
	"telemetry.telemetryLevel": "off",
	"typescript.surveys.enabled": false,
	"workbench.enableExperiments": false,

	/* extravagant features */
	"security.workspace.trust.enabled": false,
	"git.mergeEditor": false,
	"terminal.integrated.shellIntegration.enabled": false,

	/* icky */
	"editor.stickyScroll.enabled": false,
	"editor.stickyScroll.maxLineCount": 5,
	"[python][yaml]": {
		"editor.stickyScroll.enabled": true,
		"editor.stickyScroll.maxLineCount": 9,
		"editor.stickyScroll.defaultModel": "foldingProviderModel",
	},
	"workbench.tree.enableStickyScroll": true,
	"workbench.tree.stickyScrollMaxItemCount": 7,
	"terminal.integrated.stickyScroll.enabled": false,
	"terminal.integrated.stickyScroll.maxLineCount": 3,

	"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	"editor.wrappingIndent": "none",
	"editor.renderFinalNewline": "dimmed",

	"explorer.autoReveal": false,
	"explorer.copyRelativePathSeparator": "/",
	"explorer.confirmUndo": "verbose",
	"explorer.enableUndo": false,
	"explorer.incrementalNaming": "smart",
	//"explorer.sortOrder": "modified",
	//"explorer.sortOrderLexicographicOptions": "unicode",
	"explorer.openEditors.visible": 16,

	"workbench.localHistory.enabled": false,
	"workbench.localHistory.mergeWindow": 96,
	"workbench.localHistory.maxFileEntries": 16,

	/* search / peek / preview */

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": "never",
	"editor.occurrencesHighlight": false, // or "multiFile"

	"search.mode": "newEditor",
	"search.searchEditor.defaultNumberOfContextLines": null,
	//"search.searchOnType": false,
	"search.searchOnTypeDebouncePeriod": 666,
	"search.showLineNumbers": true,

	//"editor.stablePeek": true,
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"search.searchEditor.doubleClickBehaviour": "selectWord",

	//"workbench.editor.enablePreview": false,
	//"extensions.closeExtensionDetailsOnViewChange": true,
	"workbench.quickOpen.closeOnFocusLost": false,

	//"search.quickOpen.includeSymbols": true,
	"workbench.settings.enableNaturalLanguageSearch": false,

	/* suggestions-adjacent settings */

	"editor.hover.enabled": false,
	"editor.hover.above": false,
	"editor.inlayHints.enabled": "offUnlessPressed", // press Ctrl+Alt
	"editor.inlayHints.padding": true,

	/* Code Problems & Actions */
	"editor.lightbulb.enabled": false,
	"github.copilot.editor.enableCodeActions": false,
	"markdown.validate.enabled": true,
	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": true,

	/* auto-suggestion */
	"editor.inlineSuggest.enabled": false,
	"github.copilot.editor.enableAutoCompletions": false,
	"editor.quickSuggestions": { "comments": "off", "strings": "off", "other": "inline" },
	"editor.quickSuggestionsDelay": 333,
	"editor.suggest.selectionMode": "never",
	"editor.parameterHints.enabled": false,
	"editor.suggestOnTriggerCharacters": false,

	/* acceptance */
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.tabCompletion": "onlySnippets", // or "on"
	"emmet.triggerExpansionOnTab": true,
	"editor.parameterHints.cycle": true,

	/* snippety */
	"emmet.showSuggestionsAsSnippets": false,
	"editor.snippetSuggestions": "none", // or "top"

	/* how to show */
	"editor.suggestSelection": "first",
	//"editor.suggest.preview": true,
	"editor.suggest.showInlineDetails": false,

	/* which to show */
	"editor.suggest.filterGraceful": false,
	//"editor.suggest.localityBonus": true,
	"editor.suggest.showDeprecated": false,
	"editor.suggest.showKeywords": false,
	//"editor.wordBasedSuggestions": false,
	"editor.suggest.showWords": true,

	/* . . . */

	"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	"editor.fontLigatures": "'cv13', 'cv14'",
	"editor.fontSize": 14,
	//"editor.fontFamily": "Cascadia Code",
	//"editor.fontLigatures": "'ss01', 'zero'",
	//"editor.tokenColorCustomizations": { "textMateRules": [ {
	//	"scope": [
	//		"comment.block",
	//		"meta.function.decorator",
	//		"variable.parameter.function.language.special.cls.python",
	//		"variable.parameter.function.language.special.self.python",
	//	],
	//	"settings": { "fontStyle": "italic" }
	//} ] },

	/* Terminal */
	//"terminal.integrated.fontFamily": "JetBrains Mono",
	"terminal.integrated.fontSize": 14,
	"terminal.integrated.tabs.location": "left",

	/* Caret */
	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": "explicit",
	"editor.cursorWidth": 3,
	//"editor.hideCursorInOverviewRuler": true,
	"editor.roundedSelection": false,
	"editor.multiCursorMergeOverlapping": true,

	/* pairs, rulers & guides */
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": "active",
	"editor.guides.highlightActiveBracketPair": false,
	"editor.guides.highlightActiveIndentation": false,
	"editor.guides.indentation": false,
	"editor.renderLineHighlight": "none",
	//"editor.rulers": [ 80, 120 ],
	"editor.scrollbar.vertical": "visible",
	"editor.scrollbar.horizontal": "visible",
	"editor.smoothScrolling": false,
	"workbench.list.smoothScrolling": true,
	"workbench.list.horizontalScrolling": true,
	"workbench.tree.indent": 12,
	"workbench.tree.renderIndentGuides": "always",

	/* editor tabs appearance */
	"workbench.editor.decorations.badges": false,
	"workbench.editor.decorations.colors": false,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off", // voided at v1.85
	"workbench.editor.tabActionCloseVisibility": false,
	"workbench.editor.tabSizing": "shrink",
	//"window.density.editorTabHeight": "compact",
	"workbench.editor.pinnedTabsOnSeparateRow": true,
	"workbench.editor.wrapTabs": true,

	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"workbench.editor.untitled.hint": "hidden",
	"workbench.editor.empty.hint": "hidden",

	"workbench.editor.languageDetection": false,
	"workbench.editor.historyBasedLanguageDetection": false,

	//"workbench.editor.openPositioning": "first",
	"workbench.editor.revealIfOpen": true,
	"workbench.editor.restoreViewState": true,
	"workbench.editor.sharedViewState": true,
	//"workbench.editor.closeEmptyGroups": false,
	"workbench.editor.navigationScope": "editorGroup",

	/* . . . */

	"breadcrumbs.symbolSortOrder": "name",
	"notebook.breadcrumbs.showCodeCells": false,
	"notebook.outline.showCodeCells": true,
	"workbench.view.alwaysShowHeaderActions": true,

	"editor.showFoldingControls": "always",
	"notebook.showFoldingControls": "always",
	//"editor.foldingImportsByDefault": true,
	"editor.unfoldOnClickAfterEndOfLine": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.renderControlCharacters": false,

	"editor.comments.insertSpace": false,
	//"editor.comments.ignoreEmptyLines": false,

	"editor.codeLensFontFamily": "serif",
	"editor.codeLensFontSize": 12,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"scm.autoReveal": false,
	"scm.repositories.visible": 0,
	"git.untrackedChanges": "separate", // or "hidden" for better performance
	"git.showActionButton": { "commit": false, "publish": true, "sync": false },
	"git.showInlineOpenFileAction": false,
	"git.autoRepositoryDetection": "subFolders",
	//"git.repositoryScanMaxDepth": 2, // or -1

	"git.defaultBranchName": "trunk",
	"git.enableStatusBarSync": false,
	//"git.autorefresh": false,
	//"git.openRepositoryInParentFolders": "never",
	"git.fetchOnPull": true,
	//"git.autofetch": "all",
	"git.rebaseWhenSync": true,
	"git.pullBeforeCheckout": true,
	//"git.followTagsWhenSync": true,
	"git.showPushSuccessNotification": true,

	"scm.inputFontFamily": "sans",
	"scm.inputFontSize": 12,
	"git.showCommitInput": false,

	/* diff */
	"scm.diffDecorationsIgnoreTrimWhitespace": "false",
	"diffEditor.renderIndicators": false,
	"diffEditor.renderSideBySide": true,
	"diffEditor.diffAlgorithm": "advanced",
	"mergeEditor.diffAlgorithm": "advanced",

	/* Remote › Containers */
	"dotfiles.repository": "nikita-r/dotfiles",
	"dev.containers.copyGitConfig": false,

	/* Extensions */

	"git-graph.commitDetailsView.location": "Docked to Bottom",
	"git-graph.date.format": "ISO Date Only",
	//"git-graph.repository.includeCommitsMentionedByReflogs": true,
	//"git-graph.repository.onLoad.showCheckedOutBranch": true,
	"git-graph.repository.showUncommittedChanges": false,
	"git-graph.sourceCodeProviderIntegrationLocation": "More Actions",

	"gitlens.blame.ignoreWhitespace": true,
	//"gitlens.advanced.blame.delayAfterEdit": 0,
	"gitlens.defaultGravatarsStyle": "identicon",
	"gitlens.views.formats.commits.label": "${❰ tips ❱ ┇ }${message}",
	"gitlens.views.repositories.autoRefresh": false,

	/* grapecity.gc-excelviewer */
	"csv-preview.capitalizeHeaders": false,
	"csv-preview.formatValues": "unquoted",
	"csv-preview.lineNumbers": "source",
	"csv-preview.skipComments": true,

	"highlight-matching-tag.highlightFromContent": true,
	"highlight-matching-tag.highlightSelfClosing": true,
	"highlight-matching-tag.noDefaultEmptyElements": true,
	"highlight-matching-tag.styles": {
		"opening": {
			"left": {
				"custom": {
					"borderWidth": "2px",
					"borderStyle": "dashed",
					"borderColor": "#abc",
					"overviewRulerColor": "#abc"
				}
			},
			"right": {
				"custom": {
					"borderWidth": "2px",
					"borderStyle": "dashed",
					"borderColor": "#abc",
					"overviewRulerColor": "#abc"
				}
			}
		}
	},

	/* alefragnani */
	"bookmarks.gutterIconBorderColor": "#60c0c0",
	"bookmarks.gutterIconFillColor": "#60c0c0",
	"numberedBookmarks.gutterIconFillColor": "#806080",
	"numberedBookmarks.gutterIconNumberColor": "#201820",
	"bookmarks.keepBookmarksOnLineDelete": true,
	"numberedBookmarks.keepBookmarksOnLineDelete": true,
	"bookmarks.label.suggestion": "suggestWhenSelected",
	//"bookmarks.navigateThroughAllFiles": false,
	"bookmarks.saveBookmarksInProject": true,
	"numberedBookmarks.saveBookmarksInProject": true,
	"bookmarks.sideBar.expanded": true,
	"numberedBookmarks.showBookmarkNotDefinedWarning": true,

	"sortLines.ignoreUnselectedLastLine": true,
	"cSpell.numSuggestions": 3, /* streetsidesoftware.code-spell-checker */
	"cSpell.showStatus": false,
	"filesize.displayInfoOnTheRightSideOfStatusBar": true, /* mkxml.vscode-filesize */
	"filesize.showGzip": false,
	"hediet-power-tools.applyRename.enabled": false, /* hediet.hediet-power-tools */
	"hediet-power-tools.applyRename.theme": "colored",
	"hexeditor.inspectorType": "hover", /* ms-vscode.hexeditor */
	"hexeditor.maxFileSize": 99,
	"mssql.copyRemoveNewLine": false, /* ms-mssql.mssql */
	"quick-select.includeBackticks": false, /* dbankier.vscode-quick-select */
	"quicktype.inferBooleanStrings": false, /* Paste JSON as Code */

	/* tomoki1207.pdf */
	"pdf-preview.default.cursor": "hand",
	"pdf-preview.default.scale": "page-actual",

	/* jock.svg */
	"svg.preview.autoFit": false,
	"svg.preview.showRuler": true,

	/* gruntfuggly.todo-tree */
	"todo-tree.tree.scanAtStartup": true,
	"todo-tree.tree.autoRefresh": false,
	"todo-tree.filtering.ignoreGitSubmodules": true,
	"todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
	"todo-tree.filtering.excludeGlobs": [ "**/*.log" ],
	"todo-tree.ripgrep.ripgrepArgs": "--max-columns=999 --no-config --pcre2",
	"todo-tree.regex.regex": "(?<!\")\\b($TAGS)\\b|^\\s*[-*+] +\\[ \\]",
	"todo-tree.regex.subTagRegex": "^\\s*:\\s+",
	//"todo-tree.regex.regexCaseSensitive": false,
	"todo-tree.general.tags": [
		"BUG", "HACK", "FIXME", "ToDo",
		"TODO", "XXX", "MAYBE", "NOTE",
	],
	"todo-tree.general.showActivityBarBadge": true,
	"todo-tree.tree.expanded": true,
	"todo-tree.tree.flat": true,
	"todo-tree.tree.showBadges": false,
	"todo-tree.tree.labelFormat": "${tag:uppercase} ${after}",
	"todo-tree.tree.tooltipFormat": "Line ${line} ┇ ${after}",
	"todo-tree.general.revealBehaviour": "start of line",
	"todo-tree.highlights.enabled": false,
	"todo-tree.highlights.defaultHighlight": {
		"icon": "$(symbol-array)", // https://microsoft.github.io/vscode-codicons/dist/codicon.html
		"iconColor": "terminal.ansiMagenta"
	},
	"todo-tree.highlights.customHighlight": {
		"BUG": { "icon": "$(bug)", "iconColor": "terminal.ansiRed" },
		"FIXME": { "icon": "$(tools)" },
		"HACK": { "icon": "$(flame)" },
		"MAYBE": {
			"icon": "question",
			"iconColor": "#4080c0"
		},
		"NOTE": {
			"icon": "note",
			"iconColor": "#4080c0"
		},
		"XXX": {
			"icon": "pulse", // https://primer.style/octicons/
			"iconColor": "FireBrick"
		}
	},

	/* ryu1kn.partial-diff */
	"partialDiff.commandsOnContextMenu": {
		"diffVisibleEditors": false,
		"togglePreComparisonTextNormalizationRules": false,
	},

	/* ryu1kn.text-marker */
	"textmarker.hideStatusBarItems": true,
	"textmarker.autoSelectDistinctiveTextColor": true,
	//"textmarker.defaultHighlightOpacity": 0.5,
	"textmarker.highlightColors": [
		"SteelBlue",
		"Sienna",
		"OliveDrab",
		"#dfbf20ff",
	],
	"textmarker.defaultHighlightColor": "DarkSlateGray",

	/* ctf0.macros */
	"macros.list": {
		"expandAllNotebookCells": [
			"notebook.cell.expandAllCellInputs",
			"notebook.cell.expandAllCellOutputs",
		],
		"resetExplorerView": [
			"workbench.files.action.focusFilesExplorer",
			"list.clear",
			"workbench.files.action.collapseExplorerFolders",
		],
		"renamePresentFile": [
			"revealInExplorer",
			"revealInExplorer", // 2nd time is needed if "!explorerViewletVisible" before the 1st command
			"renameFile",
		],
		"focusFindWidgetSecondInput": [
			"editor.action.startFindReplaceAction",
			"editor.action.startFindReplaceAction",
		],
		"diffReview.next": [
			"workbench.action.focusActiveEditorGroup",
			"editor.action.diffReview.next",
		],
		"diffReview.prev": [
			"workbench.action.focusActiveEditorGroup",
			"editor.action.diffReview.prev",
		],
	},

	/* Language Extensions */

	//"dotnet.server.useOmnisharp": true,
	"omnisharp.organizeImportsOnFormat": true,
	"omnisharp.autoStart": false, // #> OmniSharp: Restart
	"omnisharp.enableRoslynAnalyzers": true,
	"dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "fullSolution",

	"[powershell]": {
		"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	},
	"powershell.startAutomatically": false, // #> PowerShell: Restart
	"powershell.debugging.createTemporaryIntegratedConsole": true,
	"powershell.integratedConsole.focusConsoleOnExecute": false,
	"powershell.integratedConsole.startLocation": "Editor",
	//"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.enableReferencesCodeLens": false,
	"powershell.scriptAnalysis.enable": false,

	/* Java */
	"java.project.importOnFirstTimeStartup": "interactive",
	"java.project.importHint": false,
	"java.import.generatesMetadataFilesAtProjectRoot": false,
	"java.autobuild.enabled": false,

	/* Py */
	"jupyter.disableJupyterAutoStart": true,
	"jupyter.experiments.enabled": false,
	"jupyter.interactiveWindow.textEditor.executeSelection": true,
	"python.experiments.enabled": false,
	"isort.args": [ "--profile", "black" ],
	"python.formatting.provider": "none",
	"python.linting.enabled": false,
	"python.languageServer": "Pylance",
	//"python.analysis.typeCheckingMode": "strict",
	"python.analysis.inlayHints.callArgumentNames": "partial",
	"python.analysis.inlayHints.functionReturnTypes": true,

	/* dotnet */
	"dotnet.inlayHints.enableInlayHintsForParameters": true,
	//"dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
	"dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
	"dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,

	/* T-SQL */
	"mssql.format.datatypeCasing": "lowercase",
	"mssql.format.keywordCasing": "uppercase",
	"mssql.format.placeCommasBeforeNextStatement": true,

	/* ES */
	"eslint.alwaysShowStatus": true,
	"javascript.suggestionActions.enabled": false,
	"typescript.suggestionActions.enabled": false,
	"js/ts.implicitProjectConfig.experimentalDecorators": true,
	/* inlay */
	"javascript.inlayHints.enumMemberValues.enabled": true,
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"javascript.inlayHints.parameterNames.enabled": "all",
	"javascript.inlayHints.parameterTypes.enabled": true,
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"typescript.inlayHints.enumMemberValues.enabled": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": true,

	/* ~codeFormatting */
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapAttributesIndentSize": 1,
	"html.format.wrapLineLength": 0,
	"html.format.endWithNewline": true,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"powershell.codeFormatting.alignPropertyValuePairs": false,
	//"powershell.codeFormatting.addWhitespaceAroundPipe": false,
	"powershell.codeFormatting.trimWhitespaceAroundPipe": true,
	"powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
	//"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.quoteStyle": "single",
	//"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.quoteStyle": "single",

	/* !autoClosing */
