{
	"window.titleSeparator": " · ",
	"window.title": "Code${separator}${rootName}${separator}${dirty}${activeEditorShort}",

	/* extravagant features */
	"security.workspace.trust.enabled": false,
	"git.mergeEditor": false,
	"editor.stickyScroll.enabled": false,
	"terminal.integrated.shellIntegration.enabled": false,

	"update.mode": "none", // or "manual"
	"update.showReleaseNotes": false,
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"redhat.telemetry.enabled": false,
	"telemetry.telemetryLevel": "off",
	"typescript.surveys.enabled": false,
	"workbench.enableExperiments": false,

	"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	"editor.wrappingIndent": "none",

	"explorer.autoReveal": false,
	"explorer.copyRelativePathSeparator": "/",
	"explorer.confirmUndo": "verbose",
	"explorer.enableUndo": false,
	"explorer.incrementalNaming": "smart",
	//"explorer.sortOrder": "modified",
	//"explorer.sortOrderLexicographicOptions": "unicode",
	"explorer.openEditors.visible": 16,

	"workbench.localHistory.enabled": false,
	"workbench.localHistory.mergeWindow": 96,
	"workbench.localHistory.maxFileEntries": 16,

	/* search / peek / preview */

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": "never",
	"editor.occurrencesHighlight": false,
	"search.searchEditor.defaultNumberOfContextLines": null,
	"search.searchOnTypeDebouncePeriod": 666,
	"search.showLineNumbers": true,

	//"editor.stablePeek": true,
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"search.searchEditor.doubleClickBehaviour": "selectWord",

	//"workbench.editor.enablePreview": false,
	//"extensions.closeExtensionDetailsOnViewChange": true,
	"workbench.quickOpen.closeOnFocusLost": false,
	"search.quickOpen.includeSymbols": true,
	"workbench.settings.enableNaturalLanguageSearch": false,

	/* suggestions-adjacent settings */

	"editor.hover.enabled": false,
	"editor.hover.above": false,
	"editor.inlayHints.enabled": "offUnlessPressed", // press Ctrl+Alt
	"editor.inlayHints.padding": true,
	"editor.lightbulb.enabled": false,

	"editor.inlineSuggest.enabled": false,
	"editor.quickSuggestions": {
		"comments": "off",
		"strings": "off",
		"other": "off"
	},
	"editor.quickSuggestionsDelay": 333,
	"editor.parameterHints.enabled": false,
	"editor.parameterHints.cycle": true,
	"editor.suggestOnTriggerCharacters": false,

	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.tabCompletion": "onlySnippets", // or "on"
	"emmet.triggerExpansionOnTab": true,

	"emmet.showSuggestionsAsSnippets": false,
	"editor.snippetSuggestions": "none", // or "top"

	"editor.suggestSelection": "first",
	"editor.suggest.filterGraceful": false,
	//"editor.suggest.localityBonus": true,
	//"editor.suggest.preview": true,
	"editor.suggest.showDeprecated": false,
	"editor.suggest.showInlineDetails": false,
	"editor.suggest.showKeywords": false,
	"editor.wordBasedSuggestions": false,
	"editor.suggest.showWords": true,

	/* . . . */

	"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	"editor.fontLigatures": "'cv13', 'cv14'",
	//"editor.fontFamily": "Cascadia Code",
	//"editor.fontLigatures": "'ss01', 'zero'",
	//"editor.tokenColorCustomizations": { "textMateRules": [ {
	//	"scope": [
	//		"comment.block",
	//		"meta.function.decorator",
	//		"variable.parameter.function.language.special.cls.python",
	//		"variable.parameter.function.language.special.self.python",
	//	],
	//	"settings": { "fontStyle": "italic" }
	//} ] },

	/* Terminal */
	//"terminal.integrated.fontFamily": "JetBrains Mono",
	//"terminal.integrated.fontSize": 14,
	//"terminal.integrated.tabs.location": "left",

	/* Caret */
	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": "explicit",
	"editor.cursorWidth": 3,
	//"editor.hideCursorInOverviewRuler": true,
	"editor.roundedSelection": false,
	"editor.multiCursorMergeOverlapping": true,

	/* pairs, rulers & guides */
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": "active",
	"editor.guides.highlightActiveBracketPair": false,
	"editor.guides.highlightActiveIndentation": false,
	"editor.guides.indentation": false,
	"editor.renderLineHighlight": "none",
	//"editor.rulers": [ 80, 120 ],
	"editor.scrollbar.vertical": "visible",
	"editor.scrollbar.horizontal": "visible",
	"workbench.list.horizontalScrolling": true,
	"workbench.list.smoothScrolling": true,
	"workbench.tree.indent": 12,
	"workbench.tree.renderIndentGuides": "always",

	/* editor tabs appearance */
	"workbench.editor.decorations.badges": false,
	"workbench.editor.decorations.colors": false,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.pinnedTabSizing": "shrink", // shrink intensifies
	"workbench.editor.wrapTabs": true,

	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"workbench.editor.untitled.hint": "hidden",

	"workbench.editor.languageDetection": false,
	"workbench.editor.historyBasedLanguageDetection": false,

	//"workbench.editor.openPositioning": "first",
	"workbench.editor.revealIfOpen": true,
	"workbench.editor.restoreViewState": true,
	"workbench.editor.sharedViewState": true,
	//"workbench.editor.closeEmptyGroups": false,
	"workbench.editor.navigationScope": "editorGroup",

	/* . . . */

	"breadcrumbs.symbolSortOrder": "name",
	"notebook.breadcrumbs.showCodeCells": false,
	"notebook.outline.showCodeCells": true,
	"workbench.view.alwaysShowHeaderActions": true,

	"editor.showFoldingControls": "always",
	"notebook.showFoldingControls": "always",
	//"editor.foldingImportsByDefault": true,
	"editor.unfoldOnClickAfterEndOfLine": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.renderControlCharacters": false,

	"editor.comments.insertSpace": false,
	//"editor.comments.ignoreEmptyLines": false,

	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": true,

	"editor.codeLensFontFamily": "serif",
	"editor.codeLensFontSize": 12,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"scm.autoReveal": false,
	"scm.repositories.visible": 0,
	"git.untrackedChanges": "separate", // or "hidden" for better performance
	"git.showActionButton": {
		"commit": false,
		"publish": true,
		"sync": false
	},
	"git.autoRepositoryDetection": "subFolders",
	//"git.repositoryScanMaxDepth": 2,

	"git.defaultBranchName": "trunk",
	"git.enableStatusBarSync": false,
	//"git.autorefresh": false,
	//"git.openRepositoryInParentFolders": "never",
	"git.fetchOnPull": true,
	//"git.autofetch": "all",
	"git.rebaseWhenSync": true,
	"git.pullBeforeCheckout": true,
	//"git.followTagsWhenSync": true,
	"git.showPushSuccessNotification": true,

	"scm.inputFontFamily": "sans",
	"scm.inputFontSize": 12,
	"git.showCommitInput": false,

	/* diff */
	"scm.diffDecorationsIgnoreTrimWhitespace": "false",
	"diffEditor.renderIndicators": false,
	"diffEditor.renderSideBySide": true,
	"diffEditor.diffAlgorithm": "advanced",
	"mergeEditor.diffAlgorithm": "advanced",

	/* Remote › Containers */
	"dotfiles.repository": "nikita-r/dotfiles",
	"dev.containers.copyGitConfig": false,

	/* Extensions */

	"git-graph.commitDetailsView.location": "Docked to Bottom",
	"git-graph.date.format": "ISO Date Only",
	"git-graph.repository.includeCommitsMentionedByReflogs": true,
	"git-graph.repository.onLoad.showCheckedOutBranch": true,
	"git-graph.repository.showUncommittedChanges": false,
	"git-graph.sourceCodeProviderIntegrationLocation": "More Actions",

	"gitlens.blame.ignoreWhitespace": true,
	//"gitlens.advanced.blame.delayAfterEdit": 0,
	"gitlens.defaultGravatarsStyle": "identicon",
	"gitlens.views.formats.commits.label": "${❰ tips ❱ ┇ }${message}",
	"gitlens.views.repositories.autoRefresh": false,

	/* grapecity.gc-excelviewer */
	"csv-preview.capitalizeHeaders": false,
	"csv-preview.formatValues": "unquoted",
	"csv-preview.lineNumbers": "source",
	"csv-preview.skipComments": true,

	"highlight-matching-tag.highlightFromContent": true,
	"highlight-matching-tag.highlightSelfClosing": true,
	"highlight-matching-tag.noDefaultEmptyElements": true,
	"highlight-matching-tag.styles": {
		"opening": {
			"left": {
				"custom": {
					"borderWidth": "2px",
					"borderStyle": "dashed",
					"borderColor": "#abc",
					"overviewRulerColor": "#abc"
				}
			},
			"right": {
				"custom": {
					"borderWidth": "2px",
					"borderStyle": "dashed",
					"borderColor": "#abc",
					"overviewRulerColor": "#abc"
				}
			}
		}
	},

	"bookmarks.label.suggestion": "suggestWhenSelected",
	"bookmarks.sideBar.expanded": true,
	"cSpell.numSuggestions": 3, /* streetsidesoftware.code-spell-checker */
	"cSpell.showStatus": false,
	"filesize.displayInfoOnTheRightSideOfStatusBar": true,
	"filesize.showGzip": false,
	"hexeditor.inspectorType": "hover",
	"hexeditor.maxFileSize": 99,
	"quicktype.inferBooleanStrings": false,

	/* tomoki1207.pdf */
	"pdf-preview.default.cursor": "hand",
	"pdf-preview.default.scale": "page-actual",

	/* jock.svg */
	"svg.preview.autoFit": false,
	"svg.preview.showRuler": true,

	/* gruntfuggly.todo-tree */
	"todo-tree.tree.scanAtStartup": false,
	"todo-tree.tree.autoRefresh": false,
	"todo-tree.filtering.ignoreGitSubmodules": true,
	"todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
	"todo-tree.filtering.excludeGlobs": [ "**/*.log" ],
	"todo-tree.ripgrep.ripgrepArgs": "--max-columns=999 --no-config --pcre2",
	"todo-tree.regex.regex": "(?<!\")\\b($TAGS)\\b|^\\s*[-*+] +\\[ \\]",
	"todo-tree.regex.subTagRegex": "^\\s*:\\s+",
	//"todo-tree.regex.regexCaseSensitive": false,
	"todo-tree.general.tags": [
		"BUG", "HACK", "FIXME", "ToDo",
		"TODO", "XXX", "MAYBE", "NOTE",
	],
	"todo-tree.general.showActivityBarBadge": true,
	"todo-tree.tree.expanded": true,
	"todo-tree.tree.flat": true,
	"todo-tree.tree.showBadges": false,
	"todo-tree.tree.labelFormat": "${tag:uppercase} ${after}",
	"todo-tree.tree.tooltipFormat": "Line ${line} ┇ ${after}",
	"todo-tree.general.revealBehaviour": "start of line",
	"todo-tree.highlights.enabled": false,
	"todo-tree.highlights.defaultHighlight": {
		"icon": "$(symbol-array)", // https://microsoft.github.io/vscode-codicons/dist/codicon.html
		"iconColor": "terminal.ansiMagenta"
	},
	"todo-tree.highlights.customHighlight": {
		"BUG": { "icon": "$(bug)", "iconColor": "terminal.ansiRed" },
		"FIXME": { "icon": "$(tools)" },
		"HACK": { "icon": "$(flame)" },
		"MAYBE": {
			"icon": "question",
			"iconColor": "#4080c0"
		},
		"NOTE": {
			"icon": "note",
			"iconColor": "#4080c0"
		},
		"XXX": {
			"icon": "pulse", // https://primer.style/octicons/
			"iconColor": "FireBrick"
		}
	},

	/* ryu1kn.edit-with-shell */
	"editWithShell.shell.windows": "PowerShell.exe",
	"editWithShell.shellArgs.windows": [ "-NoProfile", "-Command" ],

	/* ryu1kn.partial-diff */
	"partialDiff.commandsOnContextMenu": {
		"diffVisibleEditors": false,
		"togglePreComparisonTextNormalizationRules": false,
	},

	/* ryu1kn.text-marker */
	"textmarker.hideStatusBarItems": true,
	"textmarker.autoSelectDistinctiveTextColor": true,
	//"textmarker.defaultHighlightOpacity": 0.5,
	"textmarker.highlightColors": [
		"SteelBlue",
		"Sienna",
		"OliveDrab",
		"#dfbf20ff",
	],
	"textmarker.defaultHighlightColor": "DarkSlateGray",

	/* ctf0.macros */
	"macros.list": {
		"expandAllNotebookCells": [
			"notebook.cell.expandAllCellInputs",
			"notebook.cell.expandAllCellOutputs",
		],
		"resetExplorerView": [
			"workbench.files.action.focusFilesExplorer",
			"list.clear",
			"workbench.files.action.collapseExplorerFolders",
		],
		"renamePresentFile": [
			"revealInExplorer",
			"revealInExplorer", // allow for !explorerViewletVisible
			"renameFile",
		],
	},

	/* Language Extensions */

	"omnisharp.autoStart": false, // #> OmniSharp: Restart
	"omnisharp.enableRoslynAnalyzers": true,

	"[powershell]": {
		"editor.codeLens": false,
		"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	},
	"powershell.startAutomatically": false, // #> PowerShell: Restart
	"powershell.debugging.createTemporaryIntegratedConsole": true,
	"powershell.integratedConsole.focusConsoleOnExecute": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.scriptAnalysis.enable": false,

	/* Java */
	"java.project.importOnFirstTimeStartup": "interactive",
	"java.project.importHint": false,
	"java.import.generatesMetadataFilesAtProjectRoot": false,
	"java.autobuild.enabled": false,

	/* Py */
	"jupyter.disableJupyterAutoStart": true,
	"jupyter.experiments.enabled": false,
	"jupyter.sendSelectionToInteractiveWindow": true,
	"python.experiments.enabled": false,
	"python.languageServer": "Pylance",
	"python.analysis.typeCheckingMode": "strict",
	"isort.args": [ "--profile", "black" ],
	"[python]": {
		"editor.formatOnSave": false,
		"editor.codeActionsOnSave": { "source.organizeImports": true }
	},
	"python.formatting.provider": "none",
	"python.linting.enabled": false,

	/* T-SQL */
	"mssql.format.datatypeCasing": "lowercase",
	"mssql.format.keywordCasing": "uppercase",
	"mssql.format.placeCommasBeforeNextStatement": true,

	/* ES */
	"eslint.alwaysShowStatus": true,
	"javascript.suggestionActions.enabled": false,
	"typescript.suggestionActions.enabled": false,
	"js/ts.implicitProjectConfig.experimentalDecorators": true,
	/* inlay */
	"javascript.inlayHints.enumMemberValues.enabled": true,
	"javascript.inlayHints.functionLikeReturnTypes.enabled": true,
	"javascript.inlayHints.parameterNames.enabled": "all",
	"javascript.inlayHints.parameterTypes.enabled": true,
	"javascript.inlayHints.propertyDeclarationTypes.enabled": true,
	"javascript.inlayHints.variableTypes.enabled": true,
	"typescript.inlayHints.enumMemberValues.enabled": true,
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.parameterNames.enabled": "all",
	"typescript.inlayHints.parameterTypes.enabled": true,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": true,

	/* ~codeFormatting */
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapAttributesIndentSize": 1,
	"html.format.wrapLineLength": 0,
	"html.format.endWithNewline": true,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"powershell.codeFormatting.alignPropertyValuePairs": false,
	//"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.quoteStyle": "single",
	//"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.quoteStyle": "single",

	/* !autoClosing */
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"html.autoClosingTags": false,
	"html.autoCreateQuotes": false,
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,
	//"xml.completion.autoCloseTags": false,

	/* . . . */

	"files.hotExit": "off", // or "onExitAndWindowClose"
	"terminal.integrated.persistentSessionReviveProcess": "never", // or "onExitAndWindowClose"
	"terminal.integrated.persistentSessionScrollback": 4095,
	"terminal.integrated.scrollback": 32767,

	/* debug */
	"debug.confirmOnExit": "always",
	"debug.console.historySuggestions": false,
	"debug.focusEditorOnBreak": false,
	"debug.inlineValues": "on",
	"debug.javascript.breakOnConditionalError": true,
	"debug.showBreakpointsInOverviewRuler": true,
	"debug.showSubSessionsInToolBar": true,

	/* Terminal */

	"terminal.integrated.confirmOnExit": "hasChildProcesses", // not "always"
	"terminal.integrated.confirmOnKill": "always", // like "hasChildProcesses"

	"terminal.integrated.commandsToSkipShell": [
		"noop",
		"copyRelativeFilePath", "notifications.showList",
		"outline.focus", "timeline.focus",
		"scrollPageUp", "scrollPageDown", "editorScroll",
		"workbench.action.focusQuickOpen",
		"workbench.action.remote.showMenu",
		"workbench.action.terminal.moveToEditorInstance",
		"workbench.action.moveEditorLeftInGroup", "workbench.action.moveEditorRightInGroup",
		"workbench.action.toggleSidebarVisibility",
		"workbench.view.extension.bookmarks",
	],

	"terminal.integrated.profiles.windows": {
		//"PowerShell": {
		//	"source": "PowerShell",
		//	"args": [ "-NoLogo" ],
		//},
		"PowerShell v5": {
			"path": [ "${env:windir}\\System32\\WindowsPowerShell\\v1.0\\PowerShell.EXE" ],
			"args": [ "-NoLogo" ],
		},
		"Command Prompt": {
			"path": [ "${env:windir}\\System32\\cmd.exe" ],
			"args": [ "/K", "cls & @echo CMD is inducted on %date% at %time: =0% & @echo CD: %CD% & @prompt $$$+$G$S" ],
		},
	},
	"terminal.integrated.defaultProfile.windows": "Command Prompt",

	"terminal.integrated.rightClickBehavior": "default", // ensure the Linux default
	"terminal.integrated.showLinkHover": false,
	"terminal.integrated.enableBell": true, // icon in tabs
	"terminal.integrated.bellDuration": 3333,

	"terminal.integrated.tabs.enabled": true,
	"terminal.integrated.tabs.hideCondition": "never",
	"terminal.integrated.tabs.enableAnimation": false,
	"terminal.integrated.tabs.separator": " · ",
	"terminal.integrated.tabs.showActions": "never",
	"terminal.integrated.tabs.showActiveTerminal": "never",

