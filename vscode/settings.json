{
	"window.titleSeparator": " · ",

	"explorer.openEditors.visible": 0,
	//"explorer.sortOrder": "modified",

	"update.mode": "none",
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"workbench.enableExperiments": false,

	"editor.wordSeparators": "./\\\"',.;:()<>!@#^&*|+={}`?[]·",

	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": false,
	"editor.occurrencesHighlight": false,

	//"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	//"editor.fontLigatures": true,

	//"workbench.editor.enablePreview": false,
	"workbench.settings.enableNaturalLanguageSearch": false,
	"workbench.tree.renderIndentGuides": "always",

	"window.newWindowDimensions": "inherit",
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.wrapTabs": true,

	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.renderControlCharacters": true,
	"editor.renderIndentGuides": false,

	"breadcrumbs.symbolSortOrder": "name",
	"diffEditor.renderIndicators": false,
	"problems.showCurrentInStatus": true,
	"workbench.editor.untitled.hint": "hidden",

	"editor.inlineHints.fontFamily": "Wingdings",
	"editor.inlineHints.fontSize": 11,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"git.enableStatusBarSync": false,
	"git.rebaseWhenSync": true,
	"git.showCommitInput": false,
	"scm.inputFontFamily": "editor",
	"scm.inputFontSize": 14,

	/* Extensions */

	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.scriptAnalysis.enable": false,

	"python.autoUpdateLanguageServer": false,
	"python.showStartPage": false,

	"todo-tree.highlights.enabled": false,
	"todo-tree.tree.showBadges": false,

	/* Files */

	"files.exclude": { "**/__pycache__": true, "**/CVS": false },
	"files.hotExit": "off"
}