{
	"window.titleSeparator": " · ",
	"window.title": "Code${separator}${dirty}${activeEditorShort}${separator}${rootName}",

	//"security.workspace.trust.enabled": false,

	"update.mode": "none", // or "manual"
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"redhat.telemetry.enabled": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"workbench.enableExperiments": false,

	"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~

	"explorer.autoReveal": false,
	"explorer.incrementalNaming": "smart",
	//"explorer.sortOrder": "modified",

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": false,
	"editor.occurrencesHighlight": false,

	"workbench.settings.enableNaturalLanguageSearch": false,

	/* suggestions-adjacent settings */

	"editor.hover.enabled": false,
	//"editor.parameterHints.enabled": false,
	"editor.suggestOnTriggerCharacters": false,
	"editor.quickSuggestions": false,
	"editor.quickSuggestionsDelay": 0,
	//"editor.suggest.filterGraceful": false,
	//"editor.suggest.preview": true,
	"editor.suggest.showDeprecated": false,

	"editor.suggestSelection": "first",
	"editor.snippetSuggestions": "top",
	"editor.tabCompletion": "onlySnippets", // or "on"

	"emmet.showSuggestionsAsSnippets": true,
	"emmet.triggerExpansionOnTab": true,

	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",

	/* . . . */

	//"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	//"editor.fontSize": 14,
	//"editor.fontLigatures": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.renderControlCharacters": true,
	"editor.renderIndentGuides": false,
	//"editor.rulers": [ 80, 120 ],
	"workbench.tree.indent": 12,
	"workbench.tree.renderIndentGuides": "always",

	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.wrapTabs": true,

	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorWidth": 3,

	"breadcrumbs.symbolSortOrder": "name",
	"diffEditor.renderIndicators": false,
	"editor.comments.insertSpace": false,
	"editor.copyWithSyntaxHighlighting": false,
	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": true,
	"workbench.editor.untitled.hint": "hidden",

	"editor.codeLensFontFamily": "serif",
	"editor.codeLensFontSize": 12,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"scm.autoReveal": false,
	"scm.repositories.visible": 0,

	"git.enableStatusBarSync": false,
	//"git.followTagsWhenSync": true,
	"git.rebaseWhenSync": true,
	"git.showPushSuccessNotification": true,

	"scm.inputFontFamily": "sans",
	"scm.inputFontSize": 12,
	"git.showCommitInput": false,

	/* Extensions */

	"gitlens.blame.avatars": false,
	"gitlens.blame.ignoreWhitespace": true,

	"omnisharp.autoStart": false, // #> OmniSharp: Restart
	"omnisharp.enableRoslynAnalyzers": true,

	"powershell.startAutomatically": false, // #> PowerShell: Restart
	"powershell.debugging.createTemporaryIntegratedConsole": true,
	//"powershell.integratedConsole.focusConsoleOnExecute": false,
	//"powershell.integratedConsole.showOnStartup": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.scriptAnalysis.enable": false,

	"python.autoUpdateLanguageServer": false,
	"python.linting.enabled": false,
	"python.showStartPage": false,

	"todo-tree.general.revealBehaviour": "start of line",
	"todo-tree.highlights.enabled": false,
	"todo-tree.regex.regexCaseSensitive": false,
	"todo-tree.tree.showBadges": false,

	/* Exit / Init */
	"files.hotExit": "off",
	"terminal.integrated.confirmOnExit": true,
	"window.newWindowDimensions": "offset",
	"workbench.startupEditor": "none",
	"zenMode.restore": false,

	/* Format */
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapAttributesIndentSize": 1,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"python.formatting.provider": "none",
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.quoteStyle": "single",

	/* UI styles */
	"terminal.integrated.tabs.enabled": true,
	"window.dialogStyle": "custom",
	//"window.menuBarVisibility": "hidden",
	"window.zoomLevel": 0.0,
	"workbench.colorCustomizations": {
		"editor.selectionBackground": "#135",
		"editor.inactiveSelectionBackground": "#135",
		"editor.selectionHighlightBackground": "#aaa3",
		"editor.findMatchHighlightBackground": "#511",
		"minimap.findMatchHighlight": "#c84",
		"minimap.warningHighlight": "#ff0",
		"minimap.errorHighlight": "#f00",
		"editor.findMatchBackground": "#733",
		"minimap.selectionHighlight": "#357",
	},
	"workbench.iconTheme": "vs-minimal",

	/* . . . */

	"files.exclude": { "**/__pycache__": true, "**/CVS": false },
	"files.associations": {
		"*.qss": "css",
	},
	"diffEditor.ignoreTrimWhitespace": false,
}