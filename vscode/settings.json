			"editorWarning.foreground": "#fd3", // 50°

			/* |~| */
			"minimapSlider.background": "#6663",
			"minimapSlider.hoverBackground": "#9993",
			"minimapSlider.activeBackground": "#ccc3",
			"minimap.findMatchHighlight": "#c6c",
			"scrollbarSlider.background": "#6666",
