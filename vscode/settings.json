{
	"window.titleSeparator": " · ",
	"window.title": "Code${separator}${dirty}${activeEditorShort}${separator}${rootName}",

	"security.workspace.trust.enabled": false,

	"update.mode": "none", // or "manual"
	"update.showReleaseNotes": false,
	"update.enableWindowsBackgroundUpdates": false,
	"extensions.autoCheckUpdates": false,
	"extensions.autoUpdate": false,
	"extensions.ignoreRecommendations": true,
	"redhat.telemetry.enabled": false,
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,
	"telemetry.telemetryLevel": "off",
	"typescript.surveys.enabled": false,
	"workbench.enableExperiments": false,

	"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~

	"explorer.autoReveal": false,
	"explorer.incrementalNaming": "smart",
	//"explorer.sortOrder": "modified",
	//"explorer.sortOrderLexicographicOptions": "unicode",
	"explorer.openEditors.visible": 16,

	/* search / peek / preview */

	"editor.find.addExtraSpaceOnTop": false,
	"editor.find.cursorMoveOnType": false,
	"editor.find.seedSearchStringFromSelection": "never",
	"editor.occurrencesHighlight": false,
	"search.searchEditor.defaultNumberOfContextLines": null,
	"search.searchOnTypeDebouncePeriod": 666,
	"search.showLineNumbers": true,

	//"editor.stablePeek": true,
	"markdown.preview.doubleClickToSwitchToEditor": false,
	"search.searchEditor.doubleClickBehaviour": "selectWord",

	//"workbench.editor.enablePreview": false,
	"workbench.settings.enableNaturalLanguageSearch": false,

	/* suggestions-adjacent settings */

	"editor.hover.enabled": false,
	"editor.hover.above": false,
	"editor.quickSuggestions": false,
	"editor.quickSuggestionsDelay": 333,
	"editor.lightbulb.enabled": false,

	"editor.suggest.filterGraceful": false,
	"editor.suggest.localityBonus": true,
	//"editor.suggest.preview": true,
	"editor.suggest.showDeprecated": false,
	"editor.suggest.showStatusBar": true,

	"editor.suggestSelection": "first",
	"editor.snippetSuggestions": "top",
	"editor.tabCompletion": "onlySnippets", // or "on"

	"emmet.showSuggestionsAsSnippets": true,
	"emmet.triggerExpansionOnTab": true,

	"editor.suggestOnTriggerCharacters": false,
	//"editor.parameterHints.enabled": false,
	"editor.acceptSuggestionOnCommitCharacter": false,
	"editor.acceptSuggestionOnEnter": "off",

	/* . . . */

	//"editor.fontFamily": "Fira Code, Consolas, Lucida Console, monospace",
	//"editor.fontSize": 14,
	//"editor.fontLigatures": true,

	"editor.cursorBlinking": "phase",
	//"editor.cursorSmoothCaretAnimation": true,
	"editor.cursorWidth": 3,
	"editor.hideCursorInOverviewRuler": true,
	"editor.roundedSelection": false,

	//"editor.bracketPairColorization.enabled": true,
	//"editor.guides.bracketPairs": true,
	//"editor.guides.highlightActiveIndentation": false,
	"editor.guides.indentation": false,
	"editor.renderIndentGuides": false, // pre-v1.61
	//"editor.rulers": [ 80, 120 ],
	"workbench.tree.indent": 12,
	"workbench.tree.renderIndentGuides": "always",

	/* editor tabs */
	"workbench.editor.decorations.badges": false,
	"workbench.editor.decorations.colors": false,
	//"workbench.editor.closeEmptyGroups": false,
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.editor.showIcons": false,
	"workbench.editor.tabCloseButton": "off",
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.wrapTabs": true,

	"workbench.editor.languageDetection": false,
	"workbench.editor.untitled.hint": "hidden",
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,

	"workbench.editor.restoreViewState": true,
	"workbench.editor.sharedViewState": true,

	"editor.minimap.showSlider": "always",
	"editor.minimap.renderCharacters": false,
	"editor.renderControlCharacters": false,

	"editor.comments.insertSpace": false,
	//"editor.comments.ignoreEmptyLines": false,
	"editor.copyWithSyntaxHighlighting": false,
	"explorer.copyRelativePathSeparator": "/",

	"breadcrumbs.symbolSortOrder": "name",
	"notebook.breadcrumbs.showCodeCells": false,
	"notebook.outline.showCodeCells": true,
	"notebook.showFoldingControls": "always",
	"editor.showFoldingControls": "always",

	"workbench.quickOpen.closeOnFocusLost": false,
	"workbench.view.alwaysShowHeaderActions": true,

	"problems.decorations.enabled": false,
	"problems.showCurrentInStatus": true,

	"editor.codeLensFontFamily": "serif",
	"editor.codeLensFontSize": 12,

	/* SCM */

	"scm.alwaysShowRepositories": true,
	"scm.autoReveal": false,
	"scm.repositories.visible": 0,
	"git.untrackedChanges": "separate",

	//"git.autorefresh": false,
	"git.enableStatusBarSync": false,
	"git.fetchOnPull": true,
	//"git.followTagsWhenSync": true,
	"git.rebaseWhenSync": true,
	"git.showPushSuccessNotification": true,

	"scm.inputFontFamily": "sans",
	"scm.inputFontSize": 12,
	"git.showCommitInput": false,

	/* diff */
	"scm.diffDecorationsIgnoreTrimWhitespace": "inherit",
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderIndicators": false,
	"diffEditor.renderSideBySide": true,

	/* Remote › Containers */
	"dotfiles.repository": "nikita-r/dotfiles",
	"remote.containers.copyGitConfig": false,

	/* Extensions */

	"git-graph.commitDetailsView.location": "Docked to Bottom",
	"git-graph.date.format": "ISO Date Only",
	"git-graph.sourceCodeProviderIntegrationLocation": "More Actions",

	"gitlens.advanced.messages": {
		"suppressGitMissingWarning": true,
	},
	"gitlens.blame.ignoreWhitespace": true,
	//"gitlens.advanced.blame.delayAfterEdit": 0,
	"gitlens.defaultGravatarsStyle": "identicon",
	"gitlens.views.formats.commits.label": "${❰ tips ❱ ┇ }${message}",
	"gitlens.views.repositories.autoRefresh": false,

	"csv-preview.capitalizeHeaders": false,
	"csv-preview.formatValues": "unquoted",
	"csv-preview.lineNumbers": "source",
	"csv-preview.skipComments": true,

	"filesize.showGzip": false,
	"hexeditor.maxFileSize": 99,
	"quicktype.inferBooleanStrings": false,

	"todo-tree.tree.scanAtStartup": false,
	"todo-tree.tree.autoRefresh": false,
	"todo-tree.filtering.ignoreGitSubmodules": true,
	"todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
	"todo-tree.filtering.excludeGlobs": [ "**/*.log" ],
	"todo-tree.ripgrep.ripgrepArgs": "--max-columns=999 --no-config --pcre2",
	"todo-tree.regex.regex": "(?<!\")\\b($TAGS)\\b|^\\s*- \\[ \\]",
	"todo-tree.regex.subTagRegex": "^\\s*:\\s+",
	//"todo-tree.regex.regexCaseSensitive": false,
	"todo-tree.general.tags": [
		"BUG", "HACK", "FIXME", "ToDo",
		"TODO", "XXX", "MAYBE", "NOTE",
	],
	"todo-tree.tree.labelFormat": "${tag:uppercase} ${after}",
	"todo-tree.tree.tooltipFormat": "Line ${line} ┇ ${after}",
	"todo-tree.general.revealBehaviour": "start of line",
	"todo-tree.highlights.enabled": false,
	"todo-tree.tree.showBadges": false,
	"todo-tree.highlights.defaultHighlight": {
		"icon": "$(symbol-array)", // https://microsoft.github.io/vscode-codicons/dist/codicon.html
		"iconColor": "terminal.ansiBrightMagenta",
	},
	"todo-tree.highlights.customHighlight": {
		"BUG": { "icon": "$(bug)", "iconColor": "terminal.ansiBrightRed" },
		"FIXME": { "icon": "$(tools)" },
		"HACK": { "icon": "$(flame)" },
		"MAYBE": {
			"icon": "question",
			"iconColor": "#4080c0"
		},
		"NOTE": {
			"icon": "note",
			"iconColor": "#4080c0"
		},
		"XXX": {
			"icon": "pulse", // https://primer.style/octicons/
			"iconColor": "red"
		}
	},

	"omnisharp.autoStart": false, // #> OmniSharp: Restart
	"omnisharp.enableRoslynAnalyzers": true,

	"[powershell]": {
		"editor.wordSeparators": "!\"#&'()*+,./:;<=>?@[\\]^`{|}·", // $-%~
	},
	"powershell.startAutomatically": false, // #> PowerShell: Restart
	"powershell.debugging.createTemporaryIntegratedConsole": true,
	"powershell.integratedConsole.focusConsoleOnExecute": false,
	"powershell.integratedConsole.suppressStartupBanner": true,
	"powershell.promptToUpdatePowerShell": false,
	"powershell.scriptAnalysis.enable": false,

	"jupyter.disableJupyterAutoStart": true,
	"jupyter.experiments.enabled": false,
	"python.autoUpdateLanguageServer": false,
	"python.experiments.enabled": false,
	"python.linting.enabled": false,

	/* ~codeFormatting */
	"html.format.wrapAttributes": "force-expand-multiline",
	"html.format.wrapAttributesIndentSize": 1,
	"powershell.codeFormatting.preset": "OTBS",
	"powershell.codeFormatting.useCorrectCasing": true,
	"powershell.codeFormatting.whitespaceBetweenParameters": true,
	"python.formatting.provider": "none",
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.preferences.importModuleSpecifier": "non-relative",
	"javascript.preferences.quoteStyle": "single",
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"typescript.preferences.quoteStyle": "single",

	/* !autoClosing */
	"editor.autoClosingBrackets": "never",
	"editor.autoClosingQuotes": "never",
	"html.autoClosingTags": false,
	"javascript.autoClosingTags": false,
	"typescript.autoClosingTags": false,
	"xml.completion.autoCloseTags": false,

	/* . . . */

	"files.hotExit": "off",

	/* debug */
	"debug.confirmOnExit": "always",
	"debug.javascript.breakOnConditionalError": true,

	/* Terminal */

	"terminal.integrated.confirmOnExit": "hasChildProcesses", // not "always"
	"terminal.integrated.confirmOnKill": "always",

	"terminal.integrated.scrollback": 32767,
	"terminal.integrated.persistentSessionScrollback": 4095,

	"terminal.integrated.commandsToSkipShell": [
		"workbench.action.toggleSidebarVisibility",
	],

	"terminal.integrated.profiles.windows": {
		"PowerShell": {
			"source": "PowerShell",
			"args": ["-NoLogo"]
		},
	},

	"terminal.integrated.tabs.enabled": true,
	"terminal.integrated.tabs.hideCondition": "never",
	"terminal.integrated.tabs.enableAnimation": false,
	"terminal.integrated.tabs.separator": " · ",
	"terminal.integrated.tabs.showActions": "never",
	"terminal.integrated.tabs.showActiveTerminal": "never",
	"terminal.integrated.tabs.location": "right",

	/* . . . */

	"workbench.colorTheme": "Default Dark+",

	"workbench.colorCustomizations": {

		/* diff */
		"diffEditor.insertedTextBackground": "#0f02",
		"diffEditor.removedTextBackground": "#f002",

		"[Default Dark+]": {

			/* Hue:  20/360 */
			"focusBorder": "#F08048",
			"progressBar.background": "#F08048",
			"tab.activeModifiedBorder": "#F08048",
			"statusBar.debuggingBackground": "#c63",
			"editor.foldBackground": "#421",
			"editor.stackFrameHighlightBackground": "#421",

			/* Hue: 160/360 */
			"statusBarItem.remoteBackground": "#208060",
			"statusBarItem.warningBackground": "#208060",

			/* Hue: 300/360 */
			"activityBar.background": "#402040",
			"activityBarBadge.background": "#806080",
			"activityBarBadge.foreground": "#402040",
			"banner.background": "#201020",
			"breadcrumb.background": "#402040",
			//"editor.foldBackground": "#301830",
			"editorGutter.background": "#201020",
			"statusBar.background": "#402040",
			"statusBar.noFolderBackground": "#402040",
			"titleBar.activeBackground": "#402040",
			"titleBar.inactiveBackground": "#402040",

			/* |~| */
			"minimapSlider.activeBackground": "#ccc3",
			"minimapSlider.background": "#8883",
			"minimapSlider.hoverBackground": "#aaa3",
			"scrollbarSlider.activeBackground": "#ccc6",
			"scrollbarSlider.background": "#8886",
			"scrollbarSlider.hoverBackground": "#aaa6",
			"editorOverviewRuler.findMatchForeground": "#A5A",

			/* codes highlight */
			"editor.selectionBackground": "#135",
			"editor.inactiveSelectionBackground": "#135",
			"editor.selectionHighlightBackground": "#aaa3",
			"editor.findMatchBackground": "#737",
			"editor.findMatchHighlightBackground": "#515",
			"editor.findRangeHighlightBackground": "#66e3",
			"minimap.selectionHighlight": "#357",
			"minimap.selectionOccurrenceHighlight": "#666",
			"minimap.findMatchHighlight": "#c6c",
			//"minimap.warningHighlight": "#ff0",
			//"minimap.errorHighlight": "#f00",
			"terminal.selectionBackground": "#fff2",

			/* ext */
			"gitlens.gutterBackgroundColor": "#2222",
			"gitlens.trailingLineForegroundColor": "#6666",
		},
	},

	"workbench.iconTheme": "vs-minimal", // File Icon Theme
	"outline.icons": false, // these icons are also used in breadcrumbs ("breadcrumbs.icons" is no-op)

	"window.zoomLevel": 0.0,
	"window.dialogStyle": "custom",
	"window.openFilesInNewWindow": "default",
	"window.newWindowDimensions": "offset",
	//"window.menuBarVisibility": "hidden",
	"window.customMenuBarAltFocus": false,
	"window.enableMenuBarMnemonics": true,

	//"files.trimTrailingWhitespace": true,
	//"files.trimFinalNewlines": true,
	//"files.insertFinalNewline": true,
	"files.eol": "\n",

	/* discriminate amongst file types */

	"emmet.includeLanguages": {
	},
	"emmet.syntaxProfiles": {
		"html": { "self_closing_tag": "xhtml" },
	},

	"files.associations": {
		"*.qss": "css",
	},
	"files.exclude": {
		"**/.ipynb_checkpoints": true,
		"**/__pycache__": true,
		"**/CVS": false
	},
	"search.exclude": {
		"**/package-lock.json": true,
	},
	"workbench.editorAssociations": {
		"*.hex": "hexEditor.hexedit",
		//"*.md": "vscode.markdown.preview.editor",
	},

	/*~*~*~*~*~*~*~*~*~*~*~*/
	"zenMode.restore": false,
}